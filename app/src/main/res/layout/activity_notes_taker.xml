<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_notes"
    android:orientation="vertical"
    tools:context=".NotesTakerActivity">

    <EditText
        android:id="@+id/editText_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Заголовок"
        android:background="@color/yellow_title"
        android:textColorHint="@color/black_opacity"
        android:padding="8dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:singleLine="true"
        />

    <EditText
        android:id="@+id/editText_notes"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Введите текст"
        android:textColorHint="@color/black_opacity"
        android:padding="8dp"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="@color/black"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_save"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_save_ver2"
            android:background="@android:color/transparent"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"/>

    </RelativeLayout>
</LinearLayout>